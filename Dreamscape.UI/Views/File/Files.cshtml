@using Dreamscape.Application.Files
@using Dreamscape.Application.Files.Queries
@using WallpaperPortal.Helpers

@model PagedList<ImageFileViewModel>
@{
    ViewData["Title"] = $"";
}

@section metatags {

}

<div class="container flex-column">

    @await Html.PartialAsync("_FileGallery", Model.Items)

    @if (Model.TotalPages > 1)
    {
        <div class="pagination-container">
            @Html.PaginationLinks(@Model)
        </div>
    }
</div>